<Window x:Class="Oasis_Prototype__WPF_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oasis_Prototype__WPF_"
        mc:Ignorable="d"
        Title="Oasis" Height="450" Width="800" Icon="/New Colored Icon.png">
    <TabControl BorderBrush="Gainsboro" >
        <TabControl.Resources>
            <Style TargetType="TabItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                </Trigger>
                                <Trigger Property="IsSelected" Value="False">
                                    <Setter TargetName="Border" Property="Background" Value="Gray" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="{x:Type TabPanel}">
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>
        </TabControl.Resources>
        <TabItem Header="Exercise" Width="195" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="265*" />
                    <ColumnDefinition Width="41*" />
                    <ColumnDefinition Width="224*"/>
                    <ColumnDefinition Width="265*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Content="Exercise" FontSize="30" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="35,0,0,0" />
                <Label Grid.Column="0" Grid.ColumnSpan="3" HorizontalContentAlignment="Center" VerticalAlignment="Top" Margin="0,101,0,0" Grid.RowSpan="2" >
                    <TextBlock TextAlignment="Center" FontSize="17">
                    Follow exercises that only focus 
                    <LineBreak/>
                    <Run Text="on breathing techniques" />
                    </TextBlock>
                </Label>
                <Button FontSize="17" Height="60" Width="210" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="119,101,0,0" Grid.RowSpan="2">Breathing Exercises</Button>
                <Label Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" HorizontalContentAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">
                    <TextBlock TextAlignment="Center" FontSize="17">
                    Follow exercises that you can do
                    <LineBreak/>
                    <Run Text="while sitting in your chair" />
                    </TextBlock>
                </Label>
                <Button FontSize="17" Height="60" Width="210" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="119,0,0,0">Seated Exercises</Button>
                <Label Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3" HorizontalContentAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">
                    <TextBlock TextAlignment="Center" FontSize="17">
                        Follow exercises that require full
                        <LineBreak/>
                        <Run Text="body involvement" />
                    </TextBlock>
                </Label>
                <Button FontSize="17" Height="60" Width="210" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="119,0,0,0">Full Body Exercises</Button>
            </Grid>
        </TabItem>
        <TabItem Header="Video" Width="195" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="198.5" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Content="Video" FontSize="30" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,17,0,0" />
            </Grid>
        </TabItem>
        <TabItem Header="Audio" Width="195" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Content="Audio" FontSize="30" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,17,0,0" />
            </Grid>
        </TabItem>
        <TabItem Header="Start" Width="195" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Content="Selection" FontSize="30" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,35"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
